# Database Configuration
MONGODB_URI=mongodb://localhost:27017/kanxasafari
# For production, use MongoDB Atlas or your production database:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kanxasafari

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
# Generate a strong JWT secret for production (minimum 32 characters)

# Email Configuration (for notifications and password reset)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
# For Gmail, use app-specific passwords, not your regular password

# Khalti Payment Gateway
KHALTI_SECRET_KEY=your_khalti_secret_key
KHALTI_PUBLIC_KEY=your_khalti_public_key
# For production, get your live keys from https://khalti.com/

# eSewa Payment Gateway  
ESEWA_SECRET_KEY=your_esewa_secret_key
ESEWA_MERCHANT_CODE=your_esewa_merchant_code
# For production, get your live credentials from eSewa

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
# Get these from https://console.twilio.com/

# Server Configuration
PORT=3000
NODE_ENV=development
# Set NODE_ENV=production for production deployment

# Frontend URL (for CORS)
BASE_URL=http://localhost:8080
# For production, set to your actual domain:
# BASE_URL=https://your-domain.com

# Admin User Configuration (for initial setup)
ADMIN_EMAIL=admin@kanxasafari.com
ADMIN_PASSWORD=admin@2024!
# Change the admin password after first login in production
